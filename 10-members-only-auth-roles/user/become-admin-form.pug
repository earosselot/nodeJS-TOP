doctype html
html(lang='en')
head
	meta(charset='UTF-8')
	meta(http-equiv='X-UA-Compatible', content='IE=edge') 
	meta(name='viewport', content='width=device-width, initial-scale=1.0')
	title Members Only
body
	h1 Become Admin
	form(action='/user/validate-admin-key', method='POST')
		label(for='clubAdminKey') Secret admin key:
		input(id='clubAdminKey', name='clubAdminKey', type='text')
		button Validate Admin Key

	if invalidAdminKey
		p The key is not correct

	if user
		p !{user.firstName}
		p !{user.membershipStatus}
